    "version": "0.2.0",
    "configurations": [
        {
            "name": "::run cronlogger::",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/logger/main.go",
            "args": [
                "--code=1",
                "--app=App1",
                "--db=../../cronlog-store.db"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "::serve cronlogger::",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/server/main.go",
            "args": [
                "--host=localhost",
                "--port=9000",
                "--db=../../cronlog-store.db"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}